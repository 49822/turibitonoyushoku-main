<table>
  <tbody>
      <% recipe.recipe_comments.each do |recipe_comment| %>
      <tr>

        <td>
          <%= link_to user_path(recipe_comment.user) do %>
            <%= image_tag recipe_comment.user.get_profile_image, size: "100x100" %><br>
            <%= recipe_comment.user.name %>
          <% end %>
        </td>
        <td><%= recipe_comment.comment %></td>
        <td>
          <% if recipe_comment.user == current_user %>
            <%= link_to "Destroy", recipe_recipe_comment_path(recipe,recipe_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>