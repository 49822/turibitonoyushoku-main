<%- if controller_name != 'セッション' %>
  <%= link_to "ログイン", new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != '登録' %>
  <%= link_to "会員登録", new_registration_path(resource_name) %><br />
<% end %>

<%#<%- if devise_mapping.recoverable? && controller_name != 'パスワード' && controller_name != '登録' %>
  <%#<%= link_to "パスワードをお忘れですか?", new_password_path(resource_name) %><br />
<%#<% end %>#

<%- if devise_mapping.confirmable? && controller_name != '確認' %>
  <%= link_to "確認の指示を受け取っていませんか?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != '解除' %>
  <%= link_to "ロック解除手順が届きませんか?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "でサインイン #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
